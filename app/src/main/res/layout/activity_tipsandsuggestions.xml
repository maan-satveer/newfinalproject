<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tipsandsuggestions">

    <TextView
        android:text="Tips and Suggestion"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:textSize="24dp"
        android:id="@+id/textView6"
        android:layout_above="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Citizen Name"
        android:id="@+id/textView13"
        android:layout_above="@+id/editText10"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/edittext_layout"
        android:hint="enter name"
        android:ems="10"
        android:id="@+id/editText10"
        android:layout_above="@+id/textView14"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Citizen Email"
        android:id="@+id/textView14"
        android:layout_above="@+id/editText11"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="enter email address"
        android:background="@drawable/edittext_layout"
        android:ems="10"
        android:id="@+id/editText11"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggestion"
        android:id="@+id/textView15"
        android:layout_below="@+id/editText11"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="enter your tips and suggestion"
        android:background="@drawable/edittext_layout"
        android:id="@+id/editText12"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView15"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_above="@+id/textView13"
        android:layout_marginBottom="37dp"
        android:src="@drawable/suggestion_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_layout"
        android:text="Post"
        android:onClick="insertTips"
        android:id="@+id/button2"
        android:layout_below="@+id/editText12"
        android:layout_centerHorizontal="true" />

</RelativeLayout>